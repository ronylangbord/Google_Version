<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.milab.trunch" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.milab.trunch.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.milab.trunch.LinkedinConnectActivity" />
        <activity android:name="com.milab.trunch.SecondActivity" />
        <activity android:name="com.milab.trunch.TrunchActivity" />

        <receiver android:name="com.milab.trunch.TrunchCheckerService" />
        <receiver android:name="com.milab.trunch.TrunchReminderService" />

    </application>

</manifest>
