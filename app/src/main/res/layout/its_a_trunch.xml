<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"  >

    <ImageView
        android:id="@+id/la_whiteframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
         />

    <ImageView
        android:id="@+id/truncher1"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_below="@+id/meet_your_trunchers"
        android:layout_alignLeft="@+id/meet_your_trunchers"
        android:layout_alignStart="@+id/meet_your_trunchers"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/truncher1text"
        android:text="web designer"
        android:textAlignment="center"
        android:textColor="@color/ripple_material_light"
        android:layout_below="@+id/truncher1"
        android:layout_alignLeft="@+id/truncher1"
        android:layout_alignStart="@+id/truncher1"
        android:layout_alignBottom="@+id/la_shuffle_button" />

    <ImageView
        android:id="@+id/truncher2"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/truncher1"
        android:layout_alignRight="@+id/truncher2text"
        android:layout_alignEnd="@+id/truncher2text">

        </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/truncher2text"
        android:text="content manager"
        android:textAlignment="center"
        android:textColor="@color/ripple_material_light"
        android:layout_below="@+id/truncher2"
        android:layout_alignRight="@+id/meet_your_trunchers"
        android:layout_alignEnd="@+id/meet_your_trunchers"
        android:layout_alignBottom="@+id/la_shuffle_button"
        android:layout_toRightOf="@+id/restaurant"
        android:layout_toEndOf="@+id/restaurant" />

        <Button
            android:id="@+id/la_shuffle_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shuffle_button"
            android:layout_below="@+id/truncher2"
            android:layout_centerHorizontal="true">
            </Button>



        <ImageView
            android:id="@+id/restaurant"
            android:background="@drawable/girrafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_below="@+id/la_shuffle_button"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/where_and_when"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="40dp"
            />

        <TextView
            android:id="@+id/meet_your_trunchers"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="Meet your TRUNCHERS"
            android:layout_marginTop="30dp"
            android:textSize="21dp"
            android:textAlignment="center"
            android:gravity="center|top"
            android:textColor="@color/white"
            android:background="@drawable/meet_your_trunches"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
            </TextView>



</RelativeLayout>